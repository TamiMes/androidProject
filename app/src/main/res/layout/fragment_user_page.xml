<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserPage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/homelogo"
            android:background="@null"
            android:contentDescription="Home"
            android:layout_gravity="start|top"
            android:padding="8dp"/>
        <ImageButton
            android:id="@+id/customerSupportButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/customersupport"
            android:background="@null"
            android:contentDescription="Customer Support"
            android:layout_gravity="start"
            android:padding="8dp"/>
    <TextView
        android:id="@+id/tvUserName"
        android:fontFamily="Fantasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/shopping_cart_name"
        android:textSize="30sp"
        android:textStyle="bold" />
<ImageButton
    android:id="@+id/ibAddItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:src="@drawable/baseline_add_to_shopping_cart_24"
    android:contentDescription="Shopping Cart"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>