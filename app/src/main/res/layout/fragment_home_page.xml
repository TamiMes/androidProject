<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.HomePage">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/merchverse9" />

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:gravity="center"></FrameLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="380dp"
        android:layout_height="270dp"
        android:gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/robotgif" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#FEF7FF"
        android:orientation="vertical">


        <Button
            android:id="@+id/LoginPage"
            android:layout_width="133dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/PINK1"
            android:text="Sign In"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Don't have a user?" />

        <Button
            android:id="@+id/btnRegisterHomePage"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/PINK1"
            android:text="Sign Up"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/customerSupportButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:contentDescription="Customer Support"
        android:padding="8dp"
        android:src="@drawable/baseline_contact_support_24" />

</LinearLayout>
