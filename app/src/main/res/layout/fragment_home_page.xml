<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/merchverse8"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.HomePage">

    <FrameLayout
        android:layout_width="394dp"
        android:layout_height="157dp"></FrameLayout>

    <FrameLayout
        android:layout_width="34dp"
        android:layout_height="55dp"></FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/robotgif"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



    <TextView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:background="#F7F7F7"
        android:gravity="center"
        android:text="Dive into a world of nostalgia, where  youâ€™ll find legendary items from your favorite shows!"
        android:textColor="#eb3434"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="331dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#F7F7F7"
        android:orientation="vertical">


        <Button
            android:id="@+id/LoginPage"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/myRed2"
            android:text="Sign In"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Don't have a user?" />

        <Button
            android:id="@+id/btnRegisterHomePage"
            android:layout_width="124dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/myRed2"
            android:text="Sign Up"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/customerSupportButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:contentDescription="Customer Support"
        android:padding="8dp"
        android:src="@drawable/baseline_contact_support_24" />

</LinearLayout>
