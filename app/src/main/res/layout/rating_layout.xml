<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/pastel2">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is some text"
        android:textStyle="bold"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/app_name" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <RatingBar
                android:id="@+id/ratingBar"
                android:isIndicator="false"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5"
                android:backgroundTint="#FFD700"
                android:layout_gravity="start" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: $"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of items:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvItemCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <ImageButton
            android:id="@+id/ibFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:contentDescription="Add to wishlist"
            android:src="@drawable/baseline_favorite_border_24" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvItemDesc"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginBottom="12dp"
        android:minHeight="100dp"
        android:minLines="3"
        android:scrollbars="vertical"
        android:text="Description"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnUserPage"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/PINK1"
        android:minHeight="20dp"
        android:minLines="3"
        android:scrollbars="vertical"
        android:text="Go back to shopping"
        android:textStyle="bold" />


</LinearLayout>

