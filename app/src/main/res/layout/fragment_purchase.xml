<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pastel2"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:text="Purchase"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/paymentHolderInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Name of Payment Holder"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/idInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="ID"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/cardNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Card Number"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/cvvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:padding="10dp" />
    <EditText
        android:id="@+id/emailInput1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Email for recipt "
        android:inputType="text"
        android:padding="10dp" />

    <Button
        android:id="@+id/purchaseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/PINK1"
        android:text="Purchase"
        android:textColor="@android:color/white" />
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:layout_gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loadingharry"
            android:visibility="visible"/> <!-- Initially visible -->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationemail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/mailsucsess"
            android:visibility="gone"/> <!-- Initially hidden -->

    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center">


        <ImageView
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:src="@drawable/merchverselogo" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:contentDescription="Home"
            android:padding="8dp"
            android:src="@drawable/baseline_home_24" />

        <ImageButton
            android:id="@+id/customerSupportButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:contentDescription="Customer Support"
            android:padding="8dp"
            android:src="@drawable/baseline_contact_support_24" />
    </LinearLayout>
</LinearLayout>
